@using DalWebshop.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = @ViewBag.Categories;
    var products = @ViewBag.products;
}
<br />
<br />
<div class="row">
    
    <div class="large-10 columns"><input type="text" name="search" placeholder="Find.." id="searchValue"/>
    </div>
    <div class="large-2 columns"><a class="button success" style="width: 150px" id="searchProductBtn">Search</a>
    </div>



</div>
<br/>
<br/>
<div class="row">
    <div class="large-2 columns">

        <ul class="vertical menu unstriped">
            <li><a href="#">Newest first</a></li>
            <li><a href="#">Popular first</a></li>
            <li class="divider"></li>

            @foreach (Productcategorie p in categories)
            {
                <li><a href="">@p.Naam</a></li>
            }
        </ul>
    </div>
    <div class="large-10 columns">

        @foreach (Product p in products)
        {
            <div class="small-2 large-4 columns" style="float: left">
                <div class="column">

                   @if (p.MainImage() != null)
                   {
                       Afbeelding a = p.MainImage();
                       <img class="thumbnail" src="@a.Path/@a.Naam" style="height: 300px; width: 400px">
                   }
                   else
                   {
                       <img class="thumbnail" src="http://placehold.it/300x400">
                   }

                    <h5>@p.Titel</h5>
                    <p>@p.Prijs</p>
                    <a href="/Product/@p.Id" class="button expanded success">Info</a>
                    <a href="/Shoppingcart/Add/@p.Id" class="button expanded">Add to cart</a>
                </div>
            </div>
        }
    </div>
</div>